---
import SiteLayout from "../layouts/SiteLayout.astro";
import TableMini from "../components/TableMini.astro";

const title = "Samples — SimReact";
const description =
  "See anonymized examples of SimReact output, including executive summaries and sentiment tables.";
---

<SiteLayout title={title} description={description} pathname="/samples">
  <section class="section">
    <div class="section-wide reveal space-y-4">
      <h2 class="font-serif text-[24px] text-ink">
        Sample output (anonymized)
      </h2>
      <p class="text-[13px] text-textSub max-w-3xl">
        Below is a condensed example of a district test on a ranching-policy post.
      </p>

      <TableMini />

      <div class="mt-4 space-y-2 text-[12px] text-textSub">
        <blockquote class="border-l-2 border-borderSoft pl-3 italic">
          “This framing respects producers while acknowledging environmental concerns — strong alignment with our priorities.”
        </blockquote>
        <blockquote class="border-l-2 border-borderSoft pl-3 italic">
          “Tone feels mostly balanced, but a line on regulation clarity would help reassure small operators.”
        </blockquote>
        <blockquote class="border-l-2 border-borderSoft pl-3 italic">
          “Reads like an attack on traditional livelihoods. Emphasize partnership, or it will land as out-of-touch.”
        </blockquote>
      </div>

      <div class="mt-4">
        <a
          href="/assets/sample.pdf"
          class="btn-secondary"
        >
          Download sample PDF
        </a>
      </div>
    </div>
  </section>
</SiteLayout>
