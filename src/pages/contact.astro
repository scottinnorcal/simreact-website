---
import SiteLayout from "../layouts/SiteLayout.astro";

const title = "Contact — SimReact";
const description =
  "Request a pilot or send a question. Head to our pilot form to share your draft and district.";
---

<SiteLayout title={title} description={description} pathname="/contact">
  <section class="section">
    <div class="section-wide reveal max-w-3xl">
      <h2 class="font-serif text-[24px] text-ink mb-3">
        Ready to test a message?
      </h2>
      <p class="text-[13px] text-textSub mb-8">
        Share your draft (post, mailer, or stump line) and the district via our pilot form. We’ll confirm scope and timeline.
      </p>

      <div
        class="bg-white border border-borderSoft rounded-xl p-8 shadow-subtle text-center"
        aria-label="Request a pilot"
      >
        <div class="max-w-md mx-auto space-y-4">
          <a
            href="https://f.simreact.com/pilot-form"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-primary w-full block py-4 text-lg"
          >
            Request a Pilot →
          </a>
          <p class="text-[13px] text-textSub">
            Or <a href="mailto:info@simreact.com" class="text-accent hover:underline">email info@simreact.com</a> with details.
          </p>
        </div>
      </div>

      <div class="mt-8 pt-8 border-t border-borderSoft">
        <p class="text-[11px] text-textSub mb-3">
          Prefer a quick call?
        </p>
        <a
          href="https://f.simreact.com/pilot-form"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-secondary"
        >
          Open Pilot Form
        </a>
      </div>
    </div>
  </section>
</SiteLayout>
