---
import SiteLayout from "../layouts/SiteLayout.astro";

const title = "How it works — SimReact";
const description =
  "See how SimReact turns your draft into a district-tuned diagnostic read in three clear steps, with ethics and compliance built in.";
---

<SiteLayout title={title} description={description} pathname="/how-it-works">
  <section class="section">
    <div class="section-wide reveal space-y-5">
      <h2 class="font-serif text-[24px] text-ink">
        How it works
      </h2>

      <div class="space-y-4 text-[13px] text-textSub">
        <div>
          <h3 class="font-semibold text-ink mb-1">Step 1 — Context</h3>
          <p>
            You give us a draft message and the district. We apply a calibrated context pack (geography, economy, issues, and tone rules).
          </p>
        </div>

        <div>
          <h3 class="font-semibold text-ink mb-1">Step 2 — Personas</h3>
          <p>
            We run your message through segmented synthetic personas (L/M/C + apolitical), reflecting local archetypes.
          </p>
        </div>

        <div>
          <h3 class="font-semibold text-ink mb-1">Step 3 — Synthesis</h3>
          <p>
            We compress narrative signal into a one-page brief with traceable quotes and tags, plus the full CSV.
          </p>
        </div>
      </div>

      <div class="mt-6 bg-white border border-borderSoft rounded-xl p-4 shadow-subtle">
        <h3 class="font-semibold text-[14px] text-ink mb-2">
          Ethics &amp; Compliance
        </h3>
        <ul class="list-disc pl-5 text-[12px] text-textSub space-y-1">
          <li>Diagnostic, not predictive</li>
          <li>No personal data</li>
          <li>Transparent methods (summary → dataset)</li>
        </ul>
      </div>
    </div>
  </section>
</SiteLayout>
